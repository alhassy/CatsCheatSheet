%{{{ setoid based approach
\begin{comment}
I wrote this rushedly; very rough solutions.

\begin{spec}
module _ where -- category definitions
 record Category' {i j k : Level} : Set (â„“suc (i âŠ j âŠ k)) where
  infixr 10 _â¨¾_
  infix 5 _â‰ˆ_
  field
    -- graph structure
    Obj'  : Set i
    _âŸ¶_ : Obj' â†’ Obj' â†’ Set j

    -- setoid structure
    _â‰ˆ_  : âˆ€ {A B} (f g : A âŸ¶ B) â†’ Set k
    â‰ˆ-refl  : âˆ€ {A B} {f : A âŸ¶ B} â†’ f â‰ˆ f
    â‰ˆ-sym   : âˆ€ {A B} {f g : A âŸ¶ B} â†’ f â‰ˆ g â†’ g â‰ˆ f
    â‰ˆ-trans : âˆ€ {A B} {f g h : A âŸ¶ B} â†’ f â‰ˆ g â†’ g â‰ˆ h â†’ f â‰ˆ h

    -- typed-monoid-like structure
    _â¨¾_     : âˆ€{A B C : Obj'} â†’ A âŸ¶ B â†’ B âŸ¶ C â†’ A âŸ¶ C
    â¨¾-cong  : âˆ€ {A B C} {f f' : A âŸ¶ B} {g g' : B âŸ¶ C} â†’ f â‰ˆ f' â†’ g â‰ˆ g' â†’ f â¨¾ g â‰ˆ f' â¨¾ g'  
    assoc   : âˆ€{A B C D} {f : A âŸ¶ B}{g : B âŸ¶ C} {h : C âŸ¶ D} â†’ (f â¨¾ g) â¨¾ h â‰ˆ f â¨¾ (g â¨¾ h)
    Id      : âˆ€{A : Obj'} â†’ A âŸ¶ A
    leftId  : âˆ€ {A B} {f : A âŸ¶ B} â†’ Id â¨¾ f â‰ˆ f
    rightId : âˆ€ {A B} {f : A âŸ¶ B} â†’ f â¨¾ Id â‰ˆ f
 open Category' {{...}} renaming (_âŸ¶_ to _âŸ¶'_ ; _â¨¾_ to _â¨¾'_ ; Id to Id' ; leftId to leftId' ; rightId to rightId' ; assoc to assoc' ; _â‰ˆ_ to _â‰ˆ'_) public

 record Functor' {i j k i' j' k'} (ğ’ : Category' {i} {j} {k}) (ğ’Ÿ : Category' {i'} {j'} {k'}) : Set (â„“suc (i âŠ j âŠ k âŠ i' âŠ j' âŠ k')) where
  field
    -- graph-map structure
    obj'  : Category'.Obj' ğ’ â†’ Category'.Obj' ğ’Ÿ                               -- object map
    mor'  : âˆ€{x y : Category'.Obj' ğ’} â†’ x âŸ¶' y â†’ obj' x âŸ¶' obj' y    -- morphism preservation

    -- interaction with setoid structure
    cong : âˆ€ {x y : Category'.Obj' ğ’} {f g : x âŸ¶' y} â†’ f â‰ˆ' g â†’ mor' f â‰ˆ' mor' g

    -- preservation of finite compositions
    id   : âˆ€{x : Category'.Obj' ğ’} â†’ mor' (Id' {A = x}) â‰ˆ' Id'       -- identities preservation
    comp : âˆ€{x y z : Category'.Obj' ğ’} {f : x âŸ¶' y} {g : y âŸ¶' z} â†’ mor' (f â¨¾' g) â‰ˆ' mor' f â¨¾' mor' g  -- composition preservation

 subst-sym : âˆ€ {a} {A : Set a} (P : A â†’ A â†’ Set) {x x' y y' : A} (xeq : x â‰¡ x') (yeq : y â‰¡ y') {p : P x y} {q : P x' y'} â†’ q â‰¡ â‰¡-substâ‚‚ P xeq yeq p â†’ p â‰¡ â‰¡-substâ‚‚ P (â‰¡-sym xeq) (â‰¡-sym yeq) q
 subst-sym P â‰¡-refl â‰¡-refl {p} {.p} â‰¡-refl = â‰¡-refl

 subst-trans : âˆ€ {a} {A : Set a} (P : A â†’ A â†’ Set) {x x' x'' y y' y'' : A} (xeq : x â‰¡ x') (yeq : y â‰¡ y') (xeq' : x' â‰¡ x'') (yeq' : y' â‰¡ y'') {p : P x y} {q : P x' y'} {r : P x'' y''} â†’ r â‰¡ â‰¡-substâ‚‚ P xeq' yeq' q â†’ q â‰¡ â‰¡-substâ‚‚ P xeq yeq p â†’ r â‰¡ â‰¡-substâ‚‚ P (xeq âŸ¨â‰¡â‰¡âŸ© xeq') (yeq âŸ¨â‰¡â‰¡âŸ© yeq') p
 subst-trans P â‰¡-refl â‰¡-refl â‰¡-refl â‰¡-refl {p} {.p} {.p} â‰¡-refl â‰¡-refl = â‰¡-refl

       -- this' like subst-dist, with |â‰¡-cong| of two equations using subst
 subst-compose : âˆ€ {a} {A : Set a} (P : A â†’ A â†’ Set) {x x' y y' z z' : A} (xeq : x â‰¡ x') (yeq : y â‰¡ y') (zeq : z â‰¡ z') (p : P x y) (p' : P x' y') (q : P y z) (q' : P y' z') â†’ (_â—‡_  : âˆ€{m n k} â†’ P m n â†’ P n k â†’ P m k) â†’ p' â‰¡ â‰¡-substâ‚‚ P xeq yeq p â†’ q' â‰¡ â‰¡-substâ‚‚ P yeq zeq q â†’ (p' â—‡ q') â‰¡ â‰¡-substâ‚‚ P xeq zeq (p â—‡ q)
 subst-compose P â‰¡-refl â‰¡-refl â‰¡-refl p .p q .q _â—‡_ â‰¡-refl â‰¡-refl = â‰¡-refl
       -- taking cases |p' = subst ... p| and |q' = subst ... q| gives subst-dist ?

 subst-cong : âˆ€ {a} {A : Set a} (P : A â†’ A â†’ Set) {x x' y y' : A} (xeq : x â‰¡ x') (yeq : y â‰¡ y') {p : P x y} {p' : P x' y'} â†’ p' â‰¡ â‰¡-substâ‚‚ P xeq yeq p â†’
                    âˆ€ {b} {B : Set b} (Q : B â†’ B â†’ Set) {fâ‚€ : A â†’ B} (f : âˆ€ {m n} â†’ P m n â†’ Q (fâ‚€ m) (fâ‚€ n)) {f'â‚€ : A â†’ B} {f' : âˆ€ {m n} â†’ P m n â†’ Q (f'â‚€ m) (f'â‚€ n)}
